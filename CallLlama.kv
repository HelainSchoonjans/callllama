#: import main CallLlama

CallLlama:

<CallLlama>:
    orientation: "vertical"
    game_input: game
    nation_input: nation
    timezone_input: timezone
    display: output
    padding: 20
    spacing: 20

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            font_size: 32
            text: "Call Llama"

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            text: "Game:"
        TextInput:
            id: game

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            text: "Nation:"
        TextInput:
            id: nation

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        Label:
            text: "Timezone:"
        TextInput:
            id: timezone

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Burn the Heretics"
            size_hint_x: 15
            on_press: root.call_llama()

    BoxLayout:
        Label:
            id: output
